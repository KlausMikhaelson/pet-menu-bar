{
  "name": "menu-bar-dog",
  "version": "1.0.0",
  "description": "A cute dog that sits on your menu bar",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "dev:watch": "concurrently \"tsc --watch\" \"nodemon --watch dist --exec 'electron .'\"",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "electron": "^28.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/node-notifier": "^8.0.5",
    "googleapis": "^128.0.0",
    "node-global-key-listener": "^0.1.1",
    "node-notifier": "^10.0.1"
  }
}